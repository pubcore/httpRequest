{
    "name": "pubcore-http",
    "version": "1.0.7",
    "description": "returns a http request promise for web browser based apps",
    "repository": {
        "type": "git",
        "url": "https://github.com/pubcore/httpRequest"
    },
    "main": "index.js",
    "scripts": {
        "test": "mocha --require @babel/register src/**/*.spec.js",
        "build": "babel src/http.js --out-file index.js",
        "prepare": "npm run build",
        "watch": "babel --watch src/http.js --out-file index.js"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "@babel/register": "^7.4.4",
        "chai": "^4.2.0",
        "fakexmlhttprequest": "0.0.1",
        "mocha": "^6.1.4"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "keywords": [
        "http-client",
        "json-only",
        "browser",
        "lightweight",
        "xmlhttprequest"
    ]
}
